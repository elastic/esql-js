{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./lib",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "preserveConstEnums": true,
    "strict": true,
    "esModuleInterop": true,
    "removeComments": false,
    "allowJs": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "noEmit": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib", "README.md", "**/*.test.ts"]
}
